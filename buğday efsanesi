#include <stdio.h>

int main() {
  // 2 nin 64 e kadar olan üslerini gösteren ve toplayan program
  int i;
  double bugday=1;
  double toplambugday=0;
  
  for(i=1;i<=64;i++){
      printf("%d. icin bilgine verilecek bugday sayisi:%f\n",i,bugday);
      
      toplambugday=toplambugday+bugday;
      
      bugday=bugday*2;
  }
  printf("bilgine verilecek bugday sayisi:%f\n",toplambugday);
    return 0;
}
