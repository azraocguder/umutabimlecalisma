#include <stdio.h>
//find the biggest and smallest number 
int main() {
int number,i=1,smallestnumber=0,largestnumber=0;

do{
    printf("%dth number",i);
    scanf("%d",&number);
    if(number==0) break;
    if(number<smallestnumber)  smallestnumber=number;
    if(number>largestnumber)   largestnumber=number;
    
    i++;
    
}while(number!=0);

printf("%d is the smallest number\n",smallestnumber);
printf("%d is the largest number\n",largestnumber);
    return 0;
}
