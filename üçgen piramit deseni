//üçgen piramit deseni 

#include <stdio.h>

int main() {
    int number,i,k,j,m;
    printf("enter a number: ");
    scanf("%d",&number);
    m=number;
    
    for(i=1;i<=number;i++){
        for(j=m;j>0;j--){
            printf(" ");
        }
        m--;
        for(k=1;k<=i;k++){
            printf("* ");  
        }
        printf("\n");
    }
    return 0;
}


