#include <stdio.h>

#include<stdlib.h>
int main()
{
	int size;
	printf("please enter a size:");
	scanf("%d", &size);
	for (int i = 0; i < (size/2)+1; i++)
	{
		for (int j = 0; j < i+1; j++)
			printf(" ");

		printf("*\n");
	}
	for (int i = 0; i < size/2; i++)
	{
		for (int j = 0; j < (size/2)-i; j++)
			printf(" ");
		
		printf("*\n");
	}



    return 0;
}
